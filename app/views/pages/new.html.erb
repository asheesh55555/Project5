<%= form_for :page, url: pages_path do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
 <p>
    <%= f.label :site_id %><br>
    <%= f.collection_select :site_id, Site.order(:site),:id,:site%>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  
  
  
  <p>
    <%= f.submit %>
  </p>
<% end %>